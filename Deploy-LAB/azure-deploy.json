{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "pricingTier": {
      "type": "string",
      "allowedValues": [
        "PerGB2018",
        "Free",
        "Standalone",
        "PerNode",
        "Standard",
        "Premium"
      ],
      "defaultValue": "PerGB2018",
      "metadata": {
        "description": "Pricing tier: pergb2018 or legacy tiers (Free, Standalone, PerNode, Standard or Premium) which are not available to all customers."
      }
    },
    "allowedIPAddresses": {
      "type": "string",
      "metadata": {
        "description": "The sourceAddressPrefixes allowed to connect to this deployment"
      }
    },
    "vmSize": {
      "type": "string",
      "defaultValue": "Standard_B2s",
      "allowedValues": [
        "Standard_B2s",
        "Standard_B2ms",
        "Standard_B4ms",
        "Standard_B8ms",
        "Standard_B2s_v2",
        "Standard_B2ls_v2",
        "Standard_B2als_v2",
        "Standard_B2as_v2",
        "Standard_DS2",
        "Standard_DS11",
        "Standard_D2s_v3",
        "Standard_D2s_v4",
        "Standard_D2s_v5"
      ],
      "metadata": {
        "description": "Size of the virtual machine. Reference: https://docs.microsoft.com/en-us/azure/virtual-machines/sizes-general"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    }
  },
  "variables": {
    "doadminusername": "dolabbuilder",
    "doadminpassword": "DOLabAdmin1!!",
    "dolinuxadminusername": "doadmin",
    "dolinuxadminpassword": "DOLabAdmin1!",
    "donameprefix": "WS0",
   // "doWOffer": "Windows-10",
   // "doWSKU": "win10-22h2-pro",
  // "doWVersion": "19045.5487.250210",
    "doWOffer": "Windows-11",
    "doWSKU": "win11-25h2-pro",
    "doWVersion": "26200.6584.250915",
    "doServerOffer": "WindowsServer",
    "doServerSKU": "2022-Datacenter",
    "doServerVersion": "20348.3207.250210",
    "dofqdn": "doazlab.com",
    "doc2": "metasploit",
    "doc2publisher": "Canonical",
    "doc2ubuntuoffer": "ubuntu-24_04-lts",
    "doc2ubuntusku": "server",
    "doc2ubuntuversion": "24.04.202510010",
    "doworkspaceprefix": "LA-workspace",
    "doremoteaccessmode": "AllowPublicIP",
    "doimmediatePurgeDataOn30Days": true,
    "dataRetention": 30,
    "dowscount": 1
  },
  "resources": [
    {
      "name": "Deploy-Sentinel",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-10-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/dpcybuck/DO-LAB/main/Deploy-Sentinel/azuredeploy-sentinel.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": {
            "value": "[variables('doworkspaceprefix')]"
          },
          "pricingTier": {
            "value": "[parameters('pricingTier')]"
          },
          "dataRetention": {
            "value": "[variables('dataRetention')]"
          },
          "immediatePurgeDataOn30Days": {
            "value": "[variables('doimmediatePurgeDataOn30Days')]"
          }
        }
      }
    },
    {
      "name": "Deploy-AD",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-10-01",
      "dependsOn": [
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/dpcybuck/DO-LAB/main/Deploy-AD/azuredeploy-ad.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "adminUsername": {
            "value": "[variables('doadminusername')]"
          },
          "adminPassword": {
            "value": "[variables('doadminpassword')]"
          },
          "numberOfWorkstations": {
            "value": "[variables('dowscount')]"
          },
          "vmNamePrefix": {
            "value": "[variables('donameprefix')]"
          },
          "windowsDesktopOffer": {
            "value": "[variables('doWOffer')]"
          },
          "windowsDesktopSKU": {
            "value": "[variables('doWSKU')]"
          },
          "windowsDesktopVersion": {
            "value": "[variables('doWVersion')]"
          },
          "windowsServerOffer": {
            "value": "[variables('doServerOffer')]"
          },
          "windowsServerSKU": {
            "value": "[variables('doServerSKU')]"
          },
          "windowsServerVersion": {
            "value": "[variables('doServerVersion')]"
          },
          "vmSize": {
            "value": "[parameters('vmSize')]"
          },
          "domainFQDN": {
            "value": "[variables('dofqdn')]"
          },
          "identityType": {
            "value": "SystemAssigned"
          },
          "remoteAccessMode": {
            "value": "[variables('doremoteaccessmode')]"
          },
          "allowedIPAddresses": {
            "value": "[parameters('allowedIPAddresses')]"
          },
          "location": {
            "value": "[parameters('location')]"
          }
        }
      }
    },
    {
      "name": "Deploy-AMA",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-10-01",
      "dependsOn": [
        "Deploy-Sentinel",
        "Deploy-AD",
        "Deploy-Linux"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/dpcybuck/DO-LAB/main/Deploy-AMA/azuredeploy-ama.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "virtualMachines": {
            "value": "[reference('Deploy-AD').outputs.allWinVMsDeployed.value]"
          }
        }
      }
    },
    {
      "name": "Deploy-Linux",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-10-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/dpcybuck/DO-LAB/main/Deploy-Linux/azuredeploy-Linux.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "adminUsername": {
            "value": "[variables('dolinuxadminusername')]"
          },
          "authenticationType": {
            "value": "password"
          },
          "adminPasswordOrKey": {
            "value": "[variables('dolinuxadminpassword')]"
          },
          "vmName": {
            "value": "Nux01"
          },

          "ubuntuPublisher": {
            "value": "[variables('doc2publisher')]"
          },
          "ubuntuOffer": {
            "value": "[variables('doc2ubuntuoffer')]"
          },
          "ubuntuSKU": {
            "value": "[variables('doc2ubuntusku')]"
          },
          "ubuntuVersion": {
            "value": "[variables('doc2ubuntuversion')]"
          },
          "vmSize": {
            "value": "[parameters('vmSize')]"
          },
          "allowedIPAddresses": {
            "value": "[parameters('allowedIPAddresses')]"
          },
          "c2Framework": {
            "value": "[variables('doc2')]"
          }
        }
      }
    },
    {
      "name": "Deploy-DCRs",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-10-01",
      "dependsOn": [
        "Deploy-AMA"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/dpcybuck/DO-LAB/main/Deploy-DCRs/azuredeploy-DCRs.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "virtualMachines": {
            "value": "[reference('Deploy-AD').outputs.allWinVMsDeployed.value]"
          },
          "workspaceResourceIdOutput": {
            "value": "[reference('Deploy-Sentinel').outputs.workspaceResourceIdOutput.value]"
          }
        }
      }
    },
    {
      "name": "Deploy-NetPeering",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-10-01",
      "dependsOn": [
        "Deploy-Linux",
        "Deploy-AD"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/dpcybuck/DO-LAB/main/Deploy-NetPeering/azuredeploy-netpeering.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "linux-net-id": {
            "value": "[reference('Deploy-Linux').outputs.virtualNetworkId.value]"
          },
          "ad-net-id": {
            "value": "[reference('Deploy-AD').outputs.virtualNetworkId.value]"
          }
        }
      }
    }
  ],
  "outputs": {
    "C2PublicIP": {
      "type": "string",
      "value": "[reference('Deploy-Linux').outputs.C2PublicIP.value]"
    },
    "DCPublicIP": {
      "type": "string",
      "value": "[reference('Deploy-AD').outputs.DCPublicIP.value]"
    },
    "WSPublicIP": {
      "type": "string",
      "value": "[reference('Deploy-AD').outputs.WSPublicIP.value]"
    }
  }
}
